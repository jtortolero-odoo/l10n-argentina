<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="padron_import_padron_wizard" model="ir.ui.view">
            <field name="name">padron.import.padron.wizard</field>
            <field name="model">padron.import.padron</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import zip">
                    <label for="file" string="This wizard allows you to upload padron and process it" colspan="4" />
                    <separator string="Import Padron" colspan="4" />
                    <group>
                        <group>
                            <!--<label for="province_id" string="Province" />-->
                            <field name="province_id" on_change="onchange_province(province_id)" />
                        </group>
                        <group>
                            <!--<label for="type_file" string="Type of File" />-->
                            <field name="type_file" string="Type of File" />
                        </group>
                    </group>

                    <!-- Segun la provincia los archivos vienen de distintas maneras -->

                    <group name="files" attrs="{'invisible': [('type_file', 'not in', ('text', 'excel'))]}">
                        <separator string="Files" colspan="4" />
                        <field name="data_files" nolabel="1">
                            <tree>
                                <field name="file" widget="binary" height="64" filename="file_name" />
                                <field name="file_name" invisible="1" />
                            </tree>
                            <form>
                                <field name="file" widget="binary" height="64" filename="file_name" />
                                <field name="file_name" invisible="1" />
                            </form>
                        </field>
                    </group>
                    <group name="compressed_file" attrs="{'invisible': [('type_file', 'not in', ('zip','rar'))]}">
                        <separator string="Compressed File" colspan="4" />
                        <field name="data_compressed" widget="binary" height="64" />
                    </group>
                    <footer>
                        <button name="import_file" string="Import" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Import file/s" res_model="padron.import.padron" src_model="padron.import.padron" view_mode="form" target="new" id="action_load_padron_files" />

        <menuitem parent="padrones_root_menu" name="Import Padron" id="menu_action_load_padron" groups="account.group_account_manager" action="action_load_padron_files" />

    </data>


</odoo>
