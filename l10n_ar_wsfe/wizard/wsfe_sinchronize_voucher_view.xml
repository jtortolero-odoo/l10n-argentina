<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wsfe_sinchronize_voucher" model="ir.ui.view">
            <field name="name">WSFE Sinchronize Voucher</field>
            <field name="model">wsfe.sinchronize.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="WSFE Sinchronize Voucher">
                    <group string="Query Information">
                        <group>
                            <field name="voucher_type" widget="selection" required="True" />
                            <field name="use_wsfex"/>
                            <field name="pos_id" required="True"/>
                            <field name="voucher_number"/>
                        </group>
                        <group>
                            <field name="config_id" invisible="0" readonly="1"/>
                            <field name="config_wsfex_id" invisible="0" readonly="1"/>
                        </group>
                    </group>
                    <group string="Voucher Information">
                        <group>
                            <group>
                                <field name="document_type"/>
                                <field name="document_number"/>
                                <field name="date_process"/>
                                <field name="date_invoice"/>
                                <field name="cae" invisible="1"/>
                                <field name="cae_due_date" invisible="1"/>
                            </group>
                            <group>
                                <field name="amount_no_taxed"/>
                                <field name="amount_exempt"/>
                                <field name="amount_taxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                                <!--<field name="amount_untaxed"/>-->
                                <!--<field name="currency"/>-->
                            </group>
                        </group>
                    </group>
                    <field name="infook" invisible="1"/>
                    <group name="invoice" string="Invoice Relationship" attrs="{'invisible': [('infook','=',False)]}">
                        <field name="invoice_id"/>
                    </group>
                    <footer>
                        <button name="relate_invoice" string="Relate" type="object" class="oe_highlight"/>
                        or
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="view_wsfe_sinchronize_voucher_manual" model="ir.ui.view">
            <field name="name">WSFE Sinchronize Voucher Manual</field>
            <field name="model">wsfe.sinchronize.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="WSFE Sinchronize Voucher Manual">
                    <group string="Manual Information">
                            <group>
                                <field name="manual_pos_id" required="True"/>
                                <field name="manual_voucher_number" required="True"/>
                                <field name="manual_date_invoice" required="True"/>
                                <field name="manual_cae" required="True"/>
                                <field name="manual_cae_due_date" required="True"/>
                            </group>
                    </group>
                    <footer>
                        <button name="relate_invoice_manual" string="Relate" type="object" class="oe_highlight"/>
                        or
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_wsfe_sinchronize_voucher"
            name="WSFE Sinchronize Voucher"
            res_model="wsfe.sinchronize.voucher"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            key2="client_action_multi"/>
        
        <act_window id="action_wsfe_sinchronize_voucher_manual"
            name="WSFE Sinchronize Voucher Manual"
            res_model="wsfe.sinchronize.voucher"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            view_id="view_wsfe_sinchronize_voucher_manual"
            key2="client_action_multi"/>

    </data>
</odoo>
